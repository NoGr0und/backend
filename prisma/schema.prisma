generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  role     String  @default("USER")
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clients Client[]
  leads   Lead[]
  tasks   Task[]
  notes   Note[]
}

model Client {
  id        String    @id @default(uuid())
  name      String
  email     String?
  phone     String?
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  userId String
  User   User   @relation(fields: [userId], references: [id])

  leads Lead[]
  notes Note[]
}

model Lead {
  id        String    @id @default(uuid())
  title     String
  value     Float?
  status    String    @default("NEW")
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])
  tasks  Task[]
  notes  Note[]
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String
  type        TaskType
  status      TaskStatus @default(PENDING)
  dueDate     DateTime

  leadId String
  lead   Lead   @relation(fields: [leadId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

enum TaskStatus {
  PENDING
  DONE
}

enum TaskType {
  CALL
  EMAIL
  MEETING
  FOLLOW_UP
}

model Note {
  id      String @id @default(uuid())
  content String

  leadId String?
  lead   Lead?   @relation(fields: [leadId], references: [id])

  clientId String?
  client   Client? @relation(fields: [clientId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime  @default(now())
  deletedAt DateTime?
}
